@{
    ViewBag.Title = "Home Page";
}

<div class="container" ng-controller="IndexController">
    <div class="row">
        
        <div id="custom-search-input">
          
            <div class="input-group col-md-8 search-box">
                <h1 style="text-align: center;font-family:'Times New Roman'">Academic Map</h1>
                <input type="text" class="search-query form-control" placeholder="Search" ng-model="name"/>
                <p ng-hide="isResult !== 'Err'">Academic Paper is not found</p>
                <span class="input-group-btn">
                    <button class="btn btn-danger" ng-class="{'bottomfalse': isResult === 'Err','bottomtrue': isResult !== 'Err' }" type="button" ng-click="search(name)">
                        <span class=" glyphicon glyphicon-search"></span>
                    </button>
                    
                </span>
                
            </div>
            
        </div>
    </div>
    
</div>



@section Scripts {

    <script src="~/js/Home/index.controller.js"></script>,
    <script src="~/js/DataService.js"></script>
}